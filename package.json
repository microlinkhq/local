{
  "name": "@microlink/local",
  "description": "Runs Microlink Functions locally.",
  "homepage": "https://github.com/microlinkhq/local",
  "version": "1.0.2",
  "bin": {
    "microlink-local": "src/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "directory": "packages/local",
    "type": "git",
    "url": "git+https://github.com/microlinkhq/local.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/local/issues"
  },
  "keywords": [
    "browserless",
    "chrome",
    "chromium",
    "function",
    "microlink",
    "playwright",
    "puppeteer",
    "serverless"
  ],
  "dependencies": {
    "@browserless/function": "~8.8.9",
    "@microlink/cli": "~2.0.0-2.0",
    "browserless": "~8.8.8",
    "chalk": "~4.1.1",
    "pretty-ms": "~7.0.1",
    "puppeteer": "~8.0.0",
    "update-notifier": "~5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "simple-git-hooks": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github && npm publish --access=public",
    "prerelease": "git-dirty && npm run update:check && npm test && npm run contributors",
    "pretest": "npm run lint",
    "release": "git-authors-cli finepack && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin master",
    "test": "exit 0",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "preferGlobal": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "finepack"
    ],
    "*.js,!*.min.js,": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  }
}
